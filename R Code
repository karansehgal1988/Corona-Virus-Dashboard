library(shiny)
library(shinydashboard)

ui = shinyUI(
  dashboardPage(
    dashboardHeader(title = "Coronavirus Status Dashboard",titleWidth = 325),
    dashboardSidebar(
      sidebarMenu( 
        menuItem(text = "Overall Stats",tabName = "Overall_Stats",icon = icon("clipboard")),
        menuItem(text = "Top 15",tabName = "top15",icon = icon("clipboard"))
      )),
    
    dashboardBody(
      
      tabItems(
        tabItem(tabName = "Overall_Stats",p("thhthththh")),
        tabItem(tabName = "top15", p("xxxxxxx"))
        
      )
    )
  ))
server = shinyServer(function(input,output,session){})
shinyApp(ui,server)



